// 基础样式
.hidden {
  display: none !important;
}
.no-border {
  border: none !important;
}

// 列表
ul {
  p {
    margin-bottom: 0;
  }
}

// 菜单
.menu-item .badge {
  font-weight: 400;
}
.menu .menu-item .badge {
  text-shadow: none;
}

