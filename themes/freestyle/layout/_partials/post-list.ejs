<div class="post-list">
  <% if (page.category) { %>
    <div class="post-list-header">
      <h1 class="post-list-title"><%- page.category %></h1>
    </div>
  <% } %>
  <div class="post-list-body">
    <% page.posts.forEach(post => { %>
      <div class="post-item">
        <div class="post-item-lt">
          <h1 class="post-item-date"><%- post.date.format('YYYY-MM-DD') %></h1>
        </div>
        <div class="post-item-rt">
          <a href="<%- url_for(post.path) %>">
            <h1 class="post-item-title"><%- post.title %></h1>
          </a>
          <div class="post-item-excerpt">
            <%- post.excerpt.replace(/<h[1-5]{1}.+?<\/h[1-5]{1}>/g, '') || post.content %>
          </div>
        </div>
        
        <!-- <div class="post-item-meta">
          <%- post.date.format('YYYY-MM-DD') %>
        </div> -->
      </div>
    <% }) %>
  </div>
  <div class="post-list-footer">
    <% if (page.prev_link) { %>
      <a class="link-prev" href="<%- url_for(page.prev_link) %>">上一页</a>
    <% } %>
    <span class="desc">
      <span><%- page.current %></span>
      <span class="slash">/</span>
      <span><%- page.total %></span>
    </span>
    <% if (page.next_link) { %>
      <a class="link-next" href="<%- url_for(page.next_link) %>">下一页</a>
    <% } %>
    <% if (page.current !== 1) { %>
      <% if (page.category) { %> 
        <a class="link-back" href="<%- url_for('categories/' + page.category + '/') %>">返回第一页</a>
      <% } else { %>
        <a class="link-back" href="<%- url_for('/') %>">返回首页</a>
      <% } %> 
    <% } %>
  </div>
</div>
