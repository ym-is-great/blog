<div class="post-header">
  <h1 class="post-title"><%- page.title %></h1>
  <div class="post-meta">
    <span><%- page.date.format('YYYY-MM-DD') %></span>
    <a href="<%- url_for('/categories/' + page.categories.data[0].name.replace(/ /g, '-'))%>"><%- page.categories.data[0].name %></a>
  </div>
</div>
<div class="post-body">
  <%- page.content %>
</div>

<div class="post-footer">
  <div class="post-links">
    <a href="javascript:history.back()">返回</a>
    <% if (page.next) { %>
      <span>下一篇：<a href="<%- page.next_link %>"><%- page.next.title %></a></span>
    <% } %> 
  </div>
  <% if (page.tags.length) { %>
    <div class="post-tags">
    <% page.tags.forEach(tag => { %>
      <a class="post-tag"><%- tag.name %></a>
    <% }) %>
  </div>
  <% } %>
</div>
