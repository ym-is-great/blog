@import './_common/variables'
  
div, span, a
  -webkit-tap-highlight-color transparent

p
  margin 1em 0

a
  text-decoration none
  color color-text

p a
  color inherit
  font-weight 400
  position relative
  &::after
    display inline-block
    content ''
    width calc(100% + 2px)
    height 9px
    background-color color-link-underline
    position absolute
    left 50%
    bottom 1px
    transform translateX(-50%)
    z-index -1
ul a::after {
  display none
}

ul, ol
  margin 1em 0
  li
    margin-top .2em
    p
      margin 0

table
  width 100%
  border-collapse collapse
  font-size font-size-sm
  th
    text-align left
  th, td
    padding .5rem
    border 1px solid color-border

h1, h2, h3, h4, h5
  margin .8rem 0
  color color-text-title

h2, h3, h4, h5
  letter-spacing .05rem

h1
  font-size font-size-lg
  font-weight 400
  letter-spacing .1rem

h2
  font-size font-size-md
  font-weight 400

h3
  font-size font-size-bs
  font-weight 500

h4
  font-size font-size-sm
  font-weight 500

h5
  font-size font-size-sm
  font-weight 500
  color color-text-secondary

img 
  max-width 100%
  &.center
    display: block
    margin: 0 auto
  &.round
    border-radius 4px
  &.shadow
    margin-bottom: 1em
    box-shadow .5em .5em 1.5em rgba(0, 0, 0, .3)
pre + img
  margin-top: 1rem

strong
  font-weight 400

blockquote
  margin 0
  padding-left .5em
  border-left 5px solid #eaeaea

// 代码
code, code[class*="language-"], pre[class*="language-"]
  font-family Menlo, Monaco, 'Courier New', monospace
  font-size font-size-sm
  letter-spacing .02rem

:not(pre) > code[class*="language-"], pre[class*="language-"]
  background-color #f1f1f1
  filter: saturate(.8)
  
p code
  display inline-block
  padding .24em .4em
  background-color #f1f1f1
  font-size font-size-sm
  line-height 1
  border-radius 2px

.icon
  line-height 1