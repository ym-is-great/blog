html
  width 100%
  font-size 16px

body
  box-sizing border-box
  max-width 100%
  min-height 100%
  margin 0
  color color-text
  font-family PingFang SC, sans-serif
  line-height 1.8
  display flex
  flex-direction column
  overflow-x hidden

.head
  flex 0 0 auto

.body
  flex 1 1

.foot
  flex 0 0 auto

.header, .container, .footer
  box-sizing border-box
  max-width max-width-container
  margin 0 auto

.container
  padding space-md space-md space-lg space-md

@import './head'
@import './foot'